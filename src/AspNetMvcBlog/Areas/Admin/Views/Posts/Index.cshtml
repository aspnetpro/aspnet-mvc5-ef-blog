@{
    ViewBag.Title = "Posts";
    ViewBag.MenuLinkPosts = true;
}

<div class="row">
    <div class="col-lg-12">
        <h1 class="page-header">Posts</h1>
    </div>
    <!-- /.col-lg-12 -->
</div>

@Html.Partial("Parts/_Messages")

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <a href="@Url.RouteUrl("Admin.Posts.Add")" class="btn btn-primary">Add New Post</a>
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table id="posts-table" data-ajax-source="@Url.RouteUrl("Admin.Posts.List")" class="table table-striped table-bordered table-hover"></table>
            </div>
        </div>
    </div>
</div>

@section CssPage {
    <link href="~/areas/admin/content/libs/dataTables/dataTables.bootstrap.css" rel="stylesheet" />
}

@section ScriptPage {
    <script src="~/areas/admin/content/libs/dataTables/jquery.dataTables.js"></script>
    <script src="~/areas/admin/content/libs/dataTables/dataTables.bootstrap.js"></script>
    <script src="~/Areas/Admin/Content/js/admin.posts.js"></script>
}