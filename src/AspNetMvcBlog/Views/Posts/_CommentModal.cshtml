@model AspNetMvcBlog.Models.ViewModel.PostDetail

<div id="modal-comment" class="modal fade" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h3 class="modal-title" id="myModalLabel">Add new comment</h3>
            </div>
            <div class="modal-body">
                <form id="form-add-comment" action="@Url.RouteUrl("Posts.AddComment", new { postId = Model.Post.Id })" role="form" method="post">
                    <div class="row">
                        <div class="form-group col-md-6">
                            <label for="InputName">Name</label>
                            <input type="text" class="form-control" id="InputName" name="Author" placeholder="Enter your name">
                        </div>
                        <div class="form-group col-md-6">
                            <label for="InputEmail">Email address</label>
                            <input type="email" class="form-control" id="InputEmail" name="Email" placeholder="Enter email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputMessage">Message</label>
                        <textarea class="form-control" rows="5" id="inputMessage" name="Content" placeholder="Type your message"></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-action="add-comment" >Send</button>
                <button type="button" class="btn" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>